extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/movie/new")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 电影名字
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 电影导演
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[director]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 国家
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[country]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 语言
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[language]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 海报地址
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[poster]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 片源地址
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[flash]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 上映年代
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[year]")
				.form-group
					label.col-md-2.control-label(for="inputTitle") 电影简介
					.col-md-10
						textarea#inputTitle.form-control(type="text", name="movie[summary]")
				.form-group
					.col-md-10.col-md-offset-2
					button.btn.btn-default(type="submit") 录入